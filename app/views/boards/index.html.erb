<p id="notice"><%= notice %></p>

<h1><%= @bulletin.title %> Board</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.title %></td>
        <td><%= board.content %></td>
        <td>
          <%= link_to 'Show', [board.bulletin, board], class:'btn' %>
          <%= link_to 'Edit', edit_bulletin_board_path(board.bulletin, board), class:'btn' %>
          <%= link_to 'Destroy', [board.bulletin, board], method: :delete, data: { confirm: 'Are you sure?' }, class:'btn' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Home', root_path, class:'btn' %>
<%= link_to 'New Board', new_bulletin_board_path, class:'btn' %>
